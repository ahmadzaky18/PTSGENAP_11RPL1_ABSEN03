<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/grdnt"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tambah Data Barang"
        android:textColor="#fff"
        android:textAlignment="center"
        android:textSize="20sp"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/editcode"
        android:hint="Kode"
        android:textColorHint="#ffff"
        android:textColor="#fff"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff"></LinearLayout>

    <EditText
        android:id="@+id/editNama"
        android:hint="Nama Barang"
        android:textColorHint="#ffff"
        android:textColor="#fff"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff"></LinearLayout>

    <EditText
        android:id="@+id/editJenis"
        android:hint="Jenis Barang"
        android:inputType="text"
        android:textColorHint="#ffff"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnTambah"
            android:text="Tambah"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="#3b97d3"
            android:textColor="#d9e5f3"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btnLihat"
            android:text="Lihat Data"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="#3b97d3"
            android:textColor="#d9e5f3"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>